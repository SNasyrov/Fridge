@model FridgeV2.Models.Manufacturer
@{
    ViewBag.Title = "Удалить производителя";
}

<div>
    <dl class="dl-horizontal">
        <dt>
            Производитель:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Юр.адресс:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhysicalAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhysicalAddress)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhysicalAddress)
        </dd>
    </dl>

    <div>
        <form asp-controller="Manufacturers" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-outline-danger" value="Удалить" />
            </div>
        </form>
    </div>
</div>