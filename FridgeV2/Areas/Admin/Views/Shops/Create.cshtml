@model FridgeV2.Models.Shop
@{
    ViewBag.Title = "Добавление магазина";
}
<form asp-action="Create" asp-controller="Shops">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название:</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Адрес:</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsConfirmed" class="control-label">Статус подтверждения:</label>
        <input type="checkbox" asp-for="IsConfirmed" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-success" />
    </div>
</form>