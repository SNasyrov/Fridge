@model FridgeV2.Models.Category
@{
    ViewBag.Title = "Добавить категорию";
}
<form asp-action="Create" asp-controller="Categories">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название продукта:</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ParentСategoryId">Группа продукта:</label>
        <select class="form-control" asp-for="ParentСategoryId" asp-items="ViewBag.categories">
            <option>Пусто</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-success" />
    </div>
</form>