@model FridgeV2.Models.Category
@{
    ViewBag.Title = "Удаление категории";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название категории:</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Родительная категория:</dt>
        <dd>
            @Html.DisplayFor(model => model.ParentСategory)
        </dd>
    </dl>

    <div>
        <form asp-controller="Categories" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-outline-danger" value="Удалить" />
            </div>
        </form>
    </div>
</div>