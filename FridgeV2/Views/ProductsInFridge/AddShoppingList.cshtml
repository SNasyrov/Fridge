@model FridgeV2.Models.ProductInFridge
@{
    ViewBag.Title = "Добавление продукта";
}
<form asp-action="AddShoppingList" asp-controller="ProductsInFridge">
    <div class="form-group">
        <label asp-for="ProductId">Продукт</label>
        <select class="form-control" asp-for="ProductId" asp-items="ViewBag.Products">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ShopId"></label>
        <select class="form-control" asp-for="ShopId" asp-items="ViewBag.Shops"></select>
    </div>
    <div class="form-group">
        <label asp-for="SaveToList" class="control-label">Добавить в список покупок</label>
        <input type="checkbox" asp-for="SaveToList" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>