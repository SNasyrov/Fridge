@model FridgeV2.Models.ProductInFridge
@{
    ViewBag.Title = "Добавление продукта";
}
<form asp-action="Create" asp-controller="ProductsInFridge">
    <div class="form-group">
        <label asp-for="ProductId">Продукт:</label>
        <select class="form-control" asp-for="ProductId" asp-items="ViewBag.Products">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ShopId">Магазин:</label>
        <select class="form-control" asp-for="ShopId" asp-items="ViewBag.Shops"></select>
    </div>

    <div class="form-group">
        <label asp-for="ExpirationDate" class="control-label">Срок годности:</label>
        <input type="date" asp-for="ExpirationDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PurchaseDate" class="control-label">Дата покупки:</label>
        <input type="date" asp-for="PurchaseDate" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-success" />
    </div>
</form>