@using FridgeV2.ViewModels

@{
    ViewBag.Title = "Рецепт";
}

<head>
    <style>
        .reviews-box{
            background-color: #f7f1e3;
            width:250px;
            height:60px;
            box-shadow: 10px 10px 10px rgba(0,0,0,0.19);
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <table>
                    @foreach (var item in Model.Recipes)
                    {
                        <tr>
                            <td>Название рецепта: @item.Name</td>
                        </tr>
                        <tr>
                            <td>Список продуктов: @item.Product</td>
                        </tr>
                        <tr>
                            <td>Кол-во продуктов: @item.QuantityProduct</td>
                        </tr>
                    }
                </table>
            </div>

            <div class="col">
                <h3>Как приготовить</h3>
            </div>

            <div class="col">
                <h3>Отзывы</h3>
                <div>
                    <div class="row">
                        <div class="col">
                            @if (Model.Comments != null)
                            {
                                @foreach (var item in Model.Comments)
                                {
                                    <div class="reviews-box">
                                        <h6>@item.Username</h6>
                                        <p>@item.Comment</p>
                                    </div>
                                }
                            }
                            else
                            {
                                <p>Пока отзывов нет!</p>
                            }
                        </div>
                        <div class="col">
                        </div>
                        <div class="row">
                            <div class="col">
                                
                            </div>
                        </div>
                    </div>
                </div>

                <h3>Оставить свой отзыв</h3>
                <form asp-action="Show" asp-controller="RecipesList">
                    <textarea name="comment" cols="40" rows="3"></textarea>
                    <p>
                        <input type="submit" value="Отправить">
                        <input type="reset" value="Очистить">
                    </p>
                </form>
            </div>
        </div>
    </div>
</body>