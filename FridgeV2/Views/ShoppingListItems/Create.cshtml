@model FridgeV2.Models.ShoppingListItem
@{
    ViewBag.Title = "Добавление продукта в список покупок";
}
<form asp-action="Create" asp-controller="ShoppingListItems" asp-route-returnUrl="@ViewBag.ReturnUrl">
    <div class="form-group">
        <label asp-for="ProductId">Продукт</label>
        <select class="form-control" asp-for="ProductId" asp-items="ViewBag.Products">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="AmountOfProduct" class="control-label"></label>
        <input type="text" asp-for="AmountOfProduct" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-success" />
    </div>
</form>