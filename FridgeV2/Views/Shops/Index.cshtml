@model IEnumerable<FridgeV2.Models.Shop>
@{
    ViewBag.Title = "Магазины";
}
<a asp-action="Create">Добавить магазин</a>
<table class="table">
    <tr>
        <td>@Html.DisplayNameFor(model => model.Name):</td>

        <td>@Html.DisplayNameFor(model => model.Address):</td>

        <td>Статус подтверждения:</td>

        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => item.Name)</td>

            <td>@Html.DisplayFor(model => item.Address)</td>

            <td>
                @if (item.IsConfirmed == true)
                {
                    <span>Подтвержден</span>
                }
                else
                {
                    <span>Не подтвержден</span>
                }
            </td>

            <td>
                @if (item.IsConfirmed == false)
                {
                    <form asp-action="Confirm" asp-controller="Shops" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-outline-success">
                            Утвердить
                        </button>
                    </form>
                }
            </td>

            <td>
                <form asp-action="Delete" asp-controller="Shops" asp-route-id="@item.Id" method="post">
                    <button type="submit" class="btn btn-outline-danger">
                        Отказать
                    </button>
                </form>
            </td>
        </tr>
    }
</table>